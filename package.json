{
	"name": "boilerplate-nest-js",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "NODE_ENV=development nest start --watch",
		"docker:dev": "docker compose --env-file ./.env.dev -f docker-compose.dev.yml up",
		"docker:dev:config": "docker compose --env-file ./.env.dev -f docker-compose.dev.yml config",
		"docker:dev:remove": "docker compose --env-file ./.env.dev -f docker-compose.dev.yml down",
		"start:debug": "nest start --debug --watch",
		"start:prod": "NODE_ENV=production node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^9.0.0",
		"@nestjs/config": "^2.3.1",
		"@nestjs/core": "^9.0.0",
		"@nestjs/jwt": "^10.0.3",
		"@nestjs/mapped-types": "*",
		"@nestjs/mongoose": "^9.2.2",
		"@nestjs/passport": "^9.0.3",
		"@nestjs/platform-express": "^9.0.0",
		"@nestjs/swagger": "^6.2.1",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"joi": "^17.9.0",
		"mongoose": "^7.0.3",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.0",
		"@commitlint/config-conventional": "^17.4.4",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"@types/jest": "29.2.4",
		"@types/node": "18.11.18",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "29.3.1",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "29.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.1",
		"typescript": "^4.7.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
